@model  ViewModel

@{
	Layout = "~/Views/Shared/Layout.cshtml";
	ViewBag.MainColor = "#000000";
	ViewBag.Title = "Watermark";
}

@Html.Partial("Main")

@Html.Partial("FooterProduct")


@section scripts {
	<link href="~/css/colorpicker.css" rel="stylesheet" type="text/css" />
	@Scripts.Render("~/scripts/shared/watermark.js")
	<script type="text/javascript">
        var o = @Html.Raw(Model.JSOptions);
        $.extend(o, {
            Method: requestWatermark,
            validationTextMessage: "@Html.Raw(Model.Resources["ValidationTextMessage"])",
        });
	</script>
}

