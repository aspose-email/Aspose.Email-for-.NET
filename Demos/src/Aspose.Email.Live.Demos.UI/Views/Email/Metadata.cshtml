@model ViewModel

@{
    Layout = "~/Views/Shared/Email/Layout.cshtml";
}

@await Html.PartialAsync("Email/Main")

@await Html.PartialAsync("Email/FooterProduct", Model)

@section scripts {
    @if (System.Diagnostics.Debugger.IsAttached)
    {
        <script src="~/js/email/metadata.js"></script>
    }
    else
    {
        <script src="~/js/email/metadata.min.js"></script>
    }

    <script type="text/javascript">
        var o = @Html.Raw(Model.JSOptions);
        $.extend(o, {
            Method: requestMetadata
        });
    </script>
}